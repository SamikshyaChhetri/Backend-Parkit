generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       String  @id @default(cuid())
  name     String
  email    String
  password String
  address  String
  phone    String
  token    token[]
  avatar   String
}

model token {
  id     String @id @default(cuid())
  token  String
  userId String @unique
  user   user   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
